id: rest-service-green-controller
kind: ReplicationController
apiVersion: v1beta1
labels:
  name: rest-service-green
  version: "$SHORT_COMMIT"
desiredState:
  replicas: 2
  replicaSelector:
    name: rest-service-green
    version: "$SHORT_COMMIT"
  podTemplate:
    labels:
      name: rest-service-green
      app: rest-service-green
      version: "$SHORT_COMMIT"
    desiredState:
      manifest:
        version: v1beta1
        id: rest-service-green
        containers:
          - name: rest-service-green
            image: octoblu/rest-service:$SHORT_COMMIT
            ports:
              - containerPort: 80

